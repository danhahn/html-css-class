include mixins/_logo.jade

doctype
block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name="viewport", content="width=device-width, initial-scale=1")
      title
        block title
          = locals.name
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)      
      link(rel='stylesheet', href='/css/main.css')
      link(rel='icon', sizes='192x192', href='/images/favicon.png')
      block addlocalcss
  body(class=bodyclass)
    nav.container.global-nav
      div.container__center
        div.simple-row.simple-row--header.nav-content
          .simple-row.simple-row--brandbar
            a(href="/").brand
              +logo()
            .burger
              .line
              .line
              .line
          nav.header-nav
            ul.header-nav__list
              li.header-nav__item.header-nav__item--home
                a(href="/").header-nav__link
                  i.fa.fa-home.header-nav__icon
                  = " Home"
                ul.header-nav__dropdown
                  - var navItem = 0;
                  while navItem < locals.totalItems
                    li.header-nav__drop-item <a href="/lessons/lesson-#{navItem + 1}/index.html">Lesson #{navItem+ 1}</a>
                    -navItem++
              li.header-nav__item
                a(href="/syllabus.html").header-nav__link
                  i.fa.fa-book.header-nav__icon
                  =" Syllabus"
              li.header-nav__item
                a(href="/notes/tags/index.html").header-nav__link
                  i.fa.fa-html5.header-nav__icon
                  = " HTML Tag List"
              li.header-nav__item
                a(href="/notes/css/index.html").header-nav__link
                  i.fa.fa-css3.header-nav__icon
                  = " CSS"
              li.header-nav__item
                a(href="/notes/ascii/index.html").header-nav__link
                  i.fa.fa-heart.header-nav__icon
                  = " ASCII Codes"
              li.header-nav__item
                a(href="/notes/colors/index.html").header-nav__link
                  i.fa.fa-paint-brush.header-nav__icon
                  = " Colors"


    header.main-titlebar.container
      div.container__center
        block header
          h1
            a(href=locals.url)= locals.name
          p= locals.description


    block notes

    article.container.main-level
      .container__center
        block content

    footer.container.global-footer
      div.container__center
        div.simple-row.simple-row--footer
          p Copyright &copy; #{ new Date().getFullYear() } Copyright Holder All Rights Reserved.
          section.logo
            +logo('simple-row--svg',80, 25)
    script(src='/js/prism.js')
    script(src='/js/global.js')
    block addlocaljs
