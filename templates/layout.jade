!!! 5
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      title
        block title
          = locals.name
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      link(rel='stylesheet', href='/css/github.css')
      link(rel='stylesheet', href='/css/bootstrap.css')
      link(rel='stylesheet', href='/css/flat-ui.css')
      link(rel='stylesheet', href='/css/main.css')
      link(rel="icon", type="image/png", href="/images/favicon.png")
      script(src='/js/jquery.min.js')
      script(src='/js/bootstrap.min.js')
  body

    div.container
      div.navbar.navbar-inverse
        div.navbar-inner
          a.brand= locals.name
          div.nav-collapse.collapse
            ul.nav
              li
                a(href="/") Home
              li
                a(href="/") Lessons
              
    header
      div.container
        block header
          h1
            a(href=locals.url)= locals.name
          p= locals.description
          ul.date
            li= locals.start_date
            li= locals.end_date
    div.container
      block content
        h2 Welcome to zombocom!
    footer
      div.container
        block footer
          p &copy; #{ new Date().getFullYear() } #{ locals.owner }
