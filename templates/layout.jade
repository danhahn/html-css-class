!!! 5
block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      title
        block title
          = locals.name
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      link(rel='stylesheet', href='/css/github.css')
      link(rel='stylesheet', href='/css/bootstrap.css')
      link(rel='stylesheet', href='/css/flat-ui.css')
      link(rel='stylesheet', href='/css/main.css')
      link(rel="icon", type="image/png", href="/images/favicon.png")
      script(src='/js/jquery.min.js')
      script(src='/js/bootstrap.min.js')
      script(src='/js/global.js')
  body(class=bodyclass)

    div.container
      div.navbar.navbar-inverse
        div.navbar-inner
          a.brand= locals.name
          div
            ul.nav
              li
                a(href="/") Home

    header
      div.container
        block header
          h1
            a(href=locals.url)= locals.name
          p= locals.description
    div.container
      div.row-fluid
        block content
          h2 Welcome to zombocom!
    footer.container
      div.content-wrap
        section.copy
          p &copy; #{ new Date().getFullYear() } #{ locals.owner }
