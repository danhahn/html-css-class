!!! 5
block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      title
        block title
          = locals.name
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic|Anonymous+Pro:400,700,400italic,700italic|Merriweather:400,700,300')
      link(rel='stylesheet', href='/css/github.css')
      link(rel='stylesheet', href='/css/bootstrap.css')
      link(rel='stylesheet', href='/css/flat-ui.css')
      link(rel='stylesheet', href='/css/main.css')
      link(rel="icon", type="image/png", href="/images/favicon.png")
      script(src='/js/jquery.min.js')
      script(src='/js/bootstrap.min.js')
  body(class=bodyclass)

    div.container
      div.navbar.navbar-inverse
        div.navbar-inner
          a.brand= locals.name
          div.nav-collapse.collapse
            ul.nav
              li
                a(href="/") Home
              li
                a(href="/") Lessons
    header
      div.container
        block header
          h1
            a(href=locals.url)= locals.name
          p= locals.description
    div.container
      div.row
        block content
          h2 Welcome to zombocom!
    footer.container
      div.content-wrap
        block footer
          section.about
            !=contents['about.md'].html
          section.copy
            p &copy; #{ new Date().getFullYear() } #{ locals.owner } &mdash; powered by&nbsp;
              a(href='https://github.com/jnordberg/wintersmith') Wintersmith
              //- please leave the "powered by" if you use the design