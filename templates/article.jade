
extends layout

block addlocalcss
  if page.metadata.localcss
    link(rel='stylesheet', href=page.metadata.localcss)

block addlocaljs
  if page.metadata.localjs
    script(src=page.metadata.localjs)

block append vars
  - bodyclass = 'article-detail'

block prepend title
  | #{ page.title + " - "}

block header
  include author
  div.well.small.page-title
    h1= page.title
    div.date
      i.fa.fa-calendar
      span.month= moment(page.date).format('MMMM')
      span.day= moment(page.date).format('D') + ","
      span.year= moment(page.date).format('YYYY')
      
block content
  div.col-md-9.main-content
    article.article

      section.content!= typogr(page.html).typogrify()
  div.col-md-3.side-nav
    div.side-nav-inner
      if page.metadata.tags
        each val, index in page.metadata.tags
          div.tags
            div.data
              span(class=val.label).label.label-default
                i(class=val.icon)
                = val.label
            ul
              each tag in val.data
                li
                  if val.label == "html"
                    code &lt;#{tag}&gt;
                  if val.label == "css"
                    code #{tag}:&#123;&#125;
                  if val.label == "attribute"
                    code "#{tag}"

