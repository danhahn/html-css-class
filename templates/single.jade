extends layout
block append vars
  - bodyclass = 'article-detail'
block prepend title
  | #{ page.title + " - "}
block header
  div.titlebar
    - const [first, ...rest] = page.title.split(' ')
    h1.titlebar__main
      span.caps= first
      = ` ${rest.join(' ')}`
block content
  section.article.article--single
    article.article__primary
      if page.metadata.lesson
        - const [lessonFirst, ...lessonRest] = page.metadata.lesson.split(' ')
        h1
          span.caps= lessonFirst
          = ` ${lessonRest.join(' ')}`
      != typogr(page.html).typogrify()
