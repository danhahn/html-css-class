extends layout

block header
  h1= locals.description

block content
  include author
  each article in articles
    article.article.intro.well.span3
      header
        h2
          a(href=article.url)= article.title
        p.date
          span= moment(article.date).format('MMMM D, YYYY')
      section.content
        !{ typogr(article.intro).typogrify() }
        if article.hasMore
          p.more.btn
            a(href=article.url) See Lesson

block prepend footer
  div.nav
    if prevPage
      a(href=prevPage.url) « Newer
    else
      a(href='/archive.html') « Archives
    if nextPage
      a(href=nextPage.url) Next page »



