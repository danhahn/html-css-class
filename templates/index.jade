extends layout

block header
  div.well.small
    h1= locals.description
    h2= locals.dates

block notes
  if locals.note
    div.container
      div.alert.alert-danger
        strong= locals.note

block classnote
  if locals.classnote
    div.container
      div.alert.alert-info
        p= locals.classnote
          a.btn.btn-xs(href=locals.classaction, target='_blank') Click Here

block content
  include author
  each article in articles
    article.article.intro.well.col-md-6
      header
        h2
          a(href=article.url)= article.title
        div.date
          div.month= moment(article.date).format('MMM')
          div.day= moment(article.date).format('DD')
      section.content
        !{ typogr(article.intro).typogrify() }
        if article.hasMore
          p.more.btn
            a(href=article.url) See Lesson

block prepend footer
  div.nav
    if prevPage
      a(href=prevPage.url) « Newer
    else
      a(href='/archive.html') « Archives
    if nextPage
      a(href=nextPage.url) Next page »



